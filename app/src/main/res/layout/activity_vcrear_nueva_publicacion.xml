<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGris">

    <TextView
        android:id="@+id/lblNuevaPublicacionEncabezado"
        android:layout_width="382dp"
        android:layout_height="78dp"
        android:layout_marginBottom="8dp"
        android:height="30sp"
        android:background="@color/colorRojoCabeceras"
        android:paddingVertical="16dp"
        android:text="Nueva Publicacion"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="537dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="78dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editNuevaPublicacionTitulo"
                android:layout_width="wrap_content"
                android:layout_height="62dp"
                android:layout_marginBottom="39dp"
                android:layout_marginEnd="129dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="80dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Titulo"
                android:inputType="textPersonName"

                app:layout_constraintBottom_toTopOf="@+id/txtNuevaPublicacionAdjuntos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblNuevaPublicacionEncabezado"
                app:layout_constraintVertical_bias="1.0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtNuevaPublicacionAdjuntos"
                android:layout_width="229dp"
                android:layout_height="30dp"
                android:layout_marginTop="80dp"
                android:paddingHorizontal="45dp"
                android:text="TextView"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="165dp" />

            <ImageView
                android:id="@+id/imgNuevaPublicacionBotonAnadir"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginTop="80dp"
                android:background="@drawable/custom_image_button"
                android:tint="@color/colorVerdeApp"
                app:srcCompat="@drawable/add"
                tools:layout_editor_absoluteX="288dp"
                tools:layout_editor_absoluteY="575dp" />

            <TextView
                android:id="@+id/lblNuevaPublicacionInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="5dp"
                android:text="AÃ±adir"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="334dp"
                tools:layout_editor_absoluteY="589dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="7dp">

            <EditText
                android:id="@+id/editNuevaPublicacionAnuncio"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/borde_edittext"
                android:ems="10"
                android:hint="Descripcion"
                android:inputType="textPersonName"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="553dp" />

            <ImageButton
                android:id="@+id/btnNuevaPublicacionEnviar"
                android:layout_width="69dp"
                android:layout_height="61dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/custom_image_button"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/ic_action_content_send"
                tools:ignore="UnknownId"
                tools:layout_editor_absoluteX="360dp"
                tools:layout_editor_absoluteY="8dp" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
