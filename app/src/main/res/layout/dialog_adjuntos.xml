<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteFondos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorRojoCabeceras"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDialogAdjuntos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorRojoCabeceras"
                android:fontFamily="sans-serif"
                android:text="@string/elija_adjunto"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textColor="@color/colorWhiteFondos"
                android:textSize="24sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyDialogAdjuntos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
</LinearLayout>