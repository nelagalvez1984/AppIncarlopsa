<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgUsuariocomentario"
            android:layout_width="72dp"
            android:layout_height="71dp"
            android:layout_marginLeft="24dp"
            android:contentDescription=""
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@mipmap/foto"
            tools:ignore="ContentDescription,MissingConstraints,RtlHardcoded"
            tools:layout_editor_absoluteY="8dp" />

        <TextView
            android:id="@+id/lblCabeceraChatTitulo"
            android:layout_width="227dp"
            android:layout_height="33dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:gravity="left|center"
            android:text="UserName"
            app:layout_constraintLeft_toRightOf="@+id/imgUsuariocomentario"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints,RtlHardcoded" />

        <TextView
            android:id="@+id/nombreApellidos"
            android:layout_width="227dp"
            android:layout_height="33dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="left|center"
            android:text="Nombre y Apellidos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.177"
            app:layout_constraintStart_toEndOf="@+id/imgUsuariocomentario"
            app:layout_constraintTop_toBottomOf="@+id/lblCabeceraChatTitulo"
            tools:ignore="MissingConstraints,RtlHardcoded" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>