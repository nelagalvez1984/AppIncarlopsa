<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/FechaCreacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="@string/fecha_hora"
            tools:ignore="MissingConstraints,RtlHardcoded"
            tools:layout_editor_absoluteX="288dp"
            tools:layout_editor_absoluteY="33dp" />

        <TextView
            android:id="@+id/tituloChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="titulo"
            tools:ignore="MissingConstraints,RtlHardcoded"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/Fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="@string/fecha_hora"
            tools:ignore="MissingConstraints,RtlHardcoded"
            tools:layout_editor_absoluteX="288dp"
            tools:layout_editor_absoluteY="17dp" />

        <TextView
            android:id="@+id/autor"
            android:layout_width="55dp"
            android:layout_height="16dp"
            android:text="idautor"
            tools:layout_editor_absoluteX="289dp" />

        <TextView
            android:id="@+id/idAutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id"
            tools:layout_editor_absoluteX="267dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/FechaCreacionChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creado :"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="17dp" />

        <TextView
            android:id="@+id/FechaUltimaModificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ultima modificacion :"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="33dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>