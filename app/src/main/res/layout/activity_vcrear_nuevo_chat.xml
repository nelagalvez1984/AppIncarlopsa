<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGris"
    tools:context="incarlopsa.com.appincarlopsa.VCrearNuevoChat">

    <ImageButton
        android:id="@+id/imgNuevoChatFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="160dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/foto" />

    <TextView
        android:id="@+id/tituloNChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:text="Titulo/asunto:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTituloNChat"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/borde_edittext"
        android:ems="10"
        android:hint="Introduzca el titulo/asunto del chat"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usuarioNChat"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/borde_edittext"
        android:text="Clique para aÃ±adir un nuevo usuario"
        app:layout_constraintEnd_toStartOf="@+id/addUsuarioNChat"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toEndOf="@+id/imgNuevoChatFoto"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/addUsuarioNChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/custom_image_button"
        android:src="@drawable/add"
        android:tint="@color/colorVerdeApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/mensajeNChat"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_marginBottom="136dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:background="@drawable/borde_edittext"
        android:ems="10"
        android:hint="Introduzca el mensaje"
        android:inputType="textPersonName"
        android:text=""


        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toStartOf="@+id/buttonChatEnviar"

        app:layout_constraintHorizontal_bias="0.633"
        app:layout_constraintStart_toStartOf="parent"
        tools:hint="Introduce tu mensaje"


        />

    <ImageButton
        android:id="@+id/enviarNChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="136dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/custom_image_button"
        android:padding="20dp"
        android:src="@drawable/ic_action_content_send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintHorizontal_bias="1.0"


        app:layout_constraintStart_toEndOf="@+id/mensajeNChat"


        />

</android.support.constraint.ConstraintLayout>
