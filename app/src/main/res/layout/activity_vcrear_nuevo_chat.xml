<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGris"
    tools:context="incarlopsa.com.appincarlopsa.VCrearNuevoChat">
    <TextView
        android:id="@+id/lblNuevoChat"
        android:layout_width="382dp"
        android:layout_height="78dp"
        android:layout_marginBottom="8dp"
        android:height="30sp"
        android:background="@color/colorRojoCabeceras"
        android:paddingVertical="16dp"
        android:text="Nuevo Chat"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tituloNChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="84dp"
        android:text="Titulo/asunto:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="506dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="109dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="151dp"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTituloNChat"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/borde_edittext"
                android:ems="10"
                android:hint="Introduzca el titulo/asunto del chat"
                android:inputType="textPersonName"
                android:paddingLeft="16dp"
                android:text=""
                tools:layout_editor_absoluteY="72dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgNuevoChatFoto"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/foto"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="160dp" />

            <TextView
                android:id="@+id/usuarioNChat"
                android:layout_width="188dp"
                android:layout_height="67dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/borde_edittext"
                android:hint="Clica en el botón añadir"
                android:paddingLeft="16dp"
                android:paddingTop="20dp"

                tools:layout_editor_absoluteX="109dp"
                tools:layout_editor_absoluteY="180dp" />

            <ImageButton
                android:id="@+id/addUsuarioNChat"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/custom_image_button"
                android:src="@drawable/add"
                android:tint="@color/colorVerdeApp"
                tools:layout_editor_absoluteX="324dp"
                tools:layout_editor_absoluteY="180dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="151dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/mensajeNChat"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/borde_edittext"
                android:ems="10"
                android:hint="Introduzca el mensaje"
                android:inputType="textPersonName"


                android:text=""

                android:textAlignment="center"


                tools:hint="Introduce tu mensaje"
                tools:layout_editor_absoluteY="407dp" />

            <ImageButton
                android:id="@+id/enviarNChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"


                android:background="@drawable/custom_image_button"
                android:padding="20dp"
                android:src="@drawable/ic_action_content_send"
                tools:layout_editor_absoluteX="264dp"
                tools:layout_editor_absoluteY="407dp" />
        </LinearLayout>
    </LinearLayout>

    Edu Cercano, [10.11.17 13:01]

</android.support.constraint.ConstraintLayout>