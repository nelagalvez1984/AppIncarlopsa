<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/borde_edittext"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/usuarioRellenoFoto1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/imgAdjuntoMiniatura"
                android:layout_width="98dp"
                android:layout_height="70dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="4dp"
                android:cropToPadding="false"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/foto_usuario_peque"/>

            <TextView
                android:id="@+id/usuarioRellenoFoto2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/usuarioMostradoRelleno1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/lblAdjuntoNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:text="@string/nombre_apellidos"/>

            <TextView
                android:id="@+id/lblUsuarioTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="start|center"
                android:text="@string/tipo_empleado"/>

            <TextView
                android:id="@+id/usuarioMostradoRelleno2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>